namespace hplinalg {

void forward_solve(MatrixRef<MatrixXd> X,
                   const ArrayX<MatrixXd>& DBlocks,
                   const ArrayX<MatrixXd>& UBlocks,
                   const ArrayX<ArrayX<int_t>>& nnzIndSets,
                   const ReorderingData& reorderingData,
                   const double* vals);

void backward_solve(MatrixRef<MatrixXd> X,
                    const ArrayX<MatrixXd>& DBlocks,
                    const ArrayX<MatrixXd>& UBlocks,
                    const ArrayX<ArrayX<int_t>>& nnzIndSets,
                    const ReorderingData& reorderingData,
                    const double* vals);

} // namespace hplinalg
